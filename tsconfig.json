{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ],
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "lib": [
      "ESNext"
    ],
    "listEmittedFiles": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "outDir": "build",
    "pretty": true,
    "target": "ES2016"
  },
  "typedocOptions": {
    "entryPoint":"PathAccessor",
    "excludeExternals": true,
    "excludeNotExported": true,
    "excludePrivate": true,
    "excludeProtected": false,
    "gitRevision": null,
    "hideGenerator": true,
    "ignoreCompilerErrors": true,
    "mode": "file",
    "name": "Path Accessor",
    "out": "docs",
    "readme": "none",
    "theme": "minimal"
  }
}